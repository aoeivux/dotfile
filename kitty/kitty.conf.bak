# Alt key can't work in MacOS
macos_option_as_alt yes

hide_window_decorations titlebar-only
background_opacity 1
# dim_opacity 1

# initial_window_width  888
# initial_window_height 780
# macos_titlebar_color dark # system or custom
enable_audio_bell no
# modify_font underline_thickness 150%
macos_thicken_font 1


# Font settings
font_size 15
font_family      FiraCode Nerd Font Regular
bold_font        FiraCode Nerd Font Bold
italic_font      FiraCode Nerd Font Italic
bold_italic_font FiraCode Nerd Font Bold Italic

# 调整字体间的间距大小
adjust_line_height  -1
adjust_column_width -1

scrollback_lines 2000
# url_color #0087bd

# BEGIN_KITTY_THEME
# One Dark
include current-theme.conf
# END_KITTY_THEME

